{
  "transform": {
    ".*": "../node_modules/webpack-babel-jest"
  },
  "transformIgnorePatterns":  ["/node_modules/"],
  "rootDir": "src",
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "webpack/fileMock.js",
    "\\.(css|scss)$": "webpack/styleMock.js"
  },
  "moduleDirectories": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "es6"
  ],
  "collectCoverageFrom": [
    "/src/**/*.js?",
    "!/src/**/*.test.js"
  ]
}

